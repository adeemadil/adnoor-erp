# AdNoor ERP Production Environment Configuration

# Production Environment
PROJECT_NAME=adnoor-prod
SITE_NAME=adnoorerp.com
ADMIN_EMAIL=admin@adnoorerp.com
DB_PASSWORD=your-secure-production-password

# SSL Configuration
SSL_CERTIFICATE_PATH=/etc/letsencrypt/live/adnoorerp.com/fullchain.pem
SSL_PRIVATE_KEY_PATH=/etc/letsencrypt/live/adnoorerp.com/privkey.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_LOCATION=/home/frappe/backups

# Monitoring
MONITORING_ENABLED=1
LOG_LEVEL=INFO
